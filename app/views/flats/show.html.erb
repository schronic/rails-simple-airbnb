<div id="googleMap" style="width:100%;height:400px;"></div>


<div class="card-container">
  <div class="card">
    <div class="card-content">
      <li class="name">
        <%= @flat.name %>
      </li>
      <li class="address">
        <%= @flat.address %>
      </li>
      <li class="description">
        <%= @flat.description %>
      </li>
      <div class="info">
        <li class="guests">
          <i class="symbol fas fa-user"></i>
          <%= @flat.number_of_guests %>
        </li>
        <i class="symbol fas fa-euro-sign"></i>
        <li class="price">
          <%= @flat.price_per_night %>
        </li>
      </div>
    </div>
      <li>
        <%= link_to 'Home', flats_path %>
      </li>
    </div>
  </div>
</div>

